<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/monProfilPrenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mon_profil_prenom" />

            <TextView
                android:id="@+id/monProfilNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mon_profil_nom" />

            <TextView
                android:id="@+id/monProfilDateNaissance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mon_profil_date_naissance" />

            <TextView
                android:id="@+id/monProfilIdul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mon_profil_idul" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/monProfilPrenomValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/monProfilNomValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/monProfilDateNaissanceValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/monProfilIdulValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>